<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/contentRowField_rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentRowField_labelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/beep"
        style="@style/ContentRowFieldLabel"
        />

    <TextView
        android:id="@+id/contentRowField_valueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boop"
        android:textColor="@color/secondaryText"

        />

</LinearLayout>